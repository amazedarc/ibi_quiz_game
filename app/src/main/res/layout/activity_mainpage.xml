<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back_purple">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="65dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/container_white">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="75dp"
        android:background="@drawable/container_white_sub"/>
    <RelativeLayout
        android:id="@+id/main_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/container">



            <RelativeLayout
                android:id="@+id/sub_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/sub_rel"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="100dp"
            android:gravity="center">
            <RelativeLayout
                android:id="@+id/qcm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/img_1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="40dp"
                    app:lottie_fileName="games.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:background="@drawable/image_view_container"
                    />


                    <TextView
                        android:layout_below="@id/img_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multiple choice"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/mtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/qcm"
                android:gravity="center">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/img_2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="40dp"
                    app:lottie_fileName="games.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:background="@drawable/image_view_container"
                    />


                <TextView
                    android:layout_below="@id/img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="True and False"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>