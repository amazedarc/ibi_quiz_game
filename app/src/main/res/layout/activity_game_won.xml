<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_purple"
    tools:context=".GameWon">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="150dp"
            android:layout_marginVertical="50dp"
            android:background="@drawable/container"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="200dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/img_random"
                    android:layout_width="500dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/gift"
                    android:layout_width="500dp"
                    android:layout_height="match_parent"
                    app:lottie_fileName="gift.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="32dp"
                android:layout_marginHorizontal="50dp"
                android:text='Congratulations'
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_on_image"
                    android:textSize="32dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimaryGreen"
                    android:text="gift"
                    android:textSize="32dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="end"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="32sp"
                        android:paddingTop="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="50dp">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/play_again"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_fileName="toright.json"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/rain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_fileName="rain1.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>